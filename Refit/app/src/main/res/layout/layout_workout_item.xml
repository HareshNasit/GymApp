<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/workout_image"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/workout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/workout_image"
        android:layout_centerHorizontal="true"
        android:text="Workout Name"
        android:textColor="#000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/workout_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/workout_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="108dp"
        android:inputType="textPersonName"
        android:text="100 Reps"
        android:textColor="#000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/increaseButton"
        android:text="Up"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/decreaseButton"
        android:text="Down"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/workout_image"
        android:layout_alignStart="@+id/increaseButton" />


</RelativeLayout>